{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["unused-imports", "import"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "warn",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["./app", "*/../app"],
            "message": "App imports must be absolute."
          },
          {
            "group": [
              // core
              "@core/app-icon/*",
              "!@core/app-shadcn/*",
              // module
              "@module/*/**",
              "!@module/app-common/*",
              "!@module/app-global/*",
              "!@module/app-vendor/*"
            ],
            "message": "Module imports must be absolute."
          }
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "src/**",
            "group": "internal",
            "position": "before"
          },
          // {
          //   "pattern": "@module/app-vendor/**",
          //   "group": "internal",
          //   "position": "after"
          // },
          // Đúng ra tách ra nhưng làm rối import thêm,
          // Chỉ ref vào tham khảo, code chạy ok
          {
            "pattern": "@core/**",
            "group": "internal", // Adding @core after @app in the internal group
            "position": "before"
          },
          // app-provider, app-shadcn, app-form, app-vendor đẩy vào app-core
          // {
          //   "pattern": "{@module/app-provider/**,@module/app-provider,@core/app-shadcn/**}",
          //   "group": "internal",
          //   "position": "after"
          // },
          {
            "pattern": "@app/api/_core/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@app/**",
            "group": "internal", // Using internal to keep @app within the same top-level grouping
            "position": "after"
          },
          {
            "pattern": "{@module/app-common/**,@module/app-layout/**,@module/app-vendor/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@module/**",
            "group": "internal",
            "position": "after"
          }
          // {
          //   "pattern": "@vendor/**",
          //   "group": "internal",
          //   "position": "after"
          // }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/api/**"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["../*"]
          }
        ]
      }
    }
  ]
}
